<!doctype html>
<html>
<head>
	<% include head_dash %>
    <script type="text/javascript" scr="/js/dashboard.js"></script>
</head>
<header>
	<% include header_dash %>
</header>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        </div>
    </div>

    <div class="page-header text-center">
        <h1><span class="fa fa-tachometer"></span>Dashboard<span class="badge"></span></h1>
    </div>

    <!-- show any messages that come back with authentication -->
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="height: 500px;">
            
           <!-- <button type="button" class="courseBtn btn btn-default btn-lg" style="background: white;">Add a Course</button> -->

           <% for(var i=0; i < players.length; i++) { %>
                <a href='/course/<%= players[i].id %>' class="courseBtn btn btn-default btn-lg" style="background: white; word-break: break-all;">
                    <%= players[i].LName %> - <%= players[i].Team %> - <%= players[i].Position %>   <span class="badge pull-right">  </span>
                </a>
            <% } %>

            <% if(players.length < 1) { %>
                <h1 class="text-muted text-center" style="margin-bottom: 500px;">No Players</h1>
            <% } %>

        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <footer>
            <% include footer_dash %>
        </footer>
        
    </div>
</div>
</body>
</html>